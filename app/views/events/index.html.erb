<div class="row">
  <div class="col-sm-10 mx-auto pt-5">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title text-center">Upcoming Events</h5>
        <div class="card-text pb-3 text-center"><button id="list-sort" type="button" class="btn btn-outline-secondary btn-sm">Sort By Name</button></div>
        <table id="upcoming-table" class="table table-dark">
          <thead>
            <tr>
              <th scope="col"></th>
              <th scope="col">Name</th>
              <th scope="col">Location</th>
              <th scope="col">Date</th>
            </tr>
          </thead>
          <tbody>
          <%@events.each do |event|%>
            <tr>
             <th scope="row"></th>
             <td><%=link_to event.title.titleize, user_event_path(event.user, event)%></td>
             <td><%=event.location.city.titleize%>, <%=event.location.state.titleize%></td>
             <td><%=event.date%></td>
           </tr>
         <%end%>
       </tbody>
      </table>
      <%= link_to '<button type="button" class="col-sm-8 mx-auto btn btn-primary btn-lg btn-block">Create New Event</button>'.html_safe, new_user_event_path(current_user) %>
      </div>
    </div>
    <div class="col-sm-12 mx-auto pt-5">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title pb-3 text-center">Recently Added</h5>
          <table class="table table-dark">
            <thead>
              <tr>
                <th scope="col"></th>
                <th scope="col">Name</th>
                <th scope="col">Location</th>
                <th scope="col">Date</th>
              </tr>
            </thead>
            <tbody>
            <%@recent_events.each do |event|%>
              <tr>
               <th scope="row"></th>
               <td><%=link_to event.title.titleize, user_event_path(event.user, event)%></td>
               <td><%=event.location.city.titleize%>, <%=event.location.state.titleize%></td>
               <td><%=event.date%></td>
             </tr>
           <%end%>
         </tbody>
        </table>
      </div>
    </div>
  </div>
